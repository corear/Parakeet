<%= render '/components/nav' %>
<script src="/app/assets/javascripts/passwordCheck.js"></script>

<style>
    
    h1{
        font-weight: 700;
    }
    
    p{
      margin-bottom:10px;
    }
    
    .field{
      padding:10px;
      border-radius:8px;
      width:300px;
      margin:20px;
    }
    
    .field1{
      border:none;
      padding:10px;
      width:100%;
      border-radius:5px;
      text-align:center;
    }
    
    .field1:focus{
      text-align:left;
      outline:none;
    }
    
    </style>
    
    <% if !current_user %>
    <script>window.location ="/users/sign_in"</script>
    <% else %>

<center>
  <div class="container" style="margin-top:100px;margin-bottom:100px;">
  <h1>Join an existing room</h1>
    <div class="field">
      <input placeholder="Enter room name" id="valu" class="field1" onkeypress="return runScript(event)" /><br>
<button class="btn btn-primary" onclick="fi()" style="margin-top:20px;">JOIN ROOM</button>
    </div>
<br><h1>OR</h1><br>
  <h1>Create a new room</h1>

<%= form_for(@newRoom) do |f| %>

  <div class="field">
    <p>Name of room</p>
    <%= f.text_field :title, :class => "field1" %>
  </div>
  
    <input type="password" name="password" id="password_fake" class="hidden" autocomplete="off" style="display: none;">
  <div class="field">
    <p>Password to room</p>
    <%= f.password_field :password, :class => "field1" %>
  </div>

  <div class="actions">
    <%= f.submit "CREATE ROOM", :class => "btn btn-primary" %>
  </div>
<% end %>

<div>
  <div>
    </div>
    <div>
      <div>
        <div>
          <div>
            <% for @r in @rooms do %>
              <div id="<%= @r.title.downcase %>" title="<%= @r.id %>"></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>


</div>
</center>
    <% end %>

<script>
  document.title="Parakeet | Home"
</script>
<%= render '/components/nav' %>

<style>
  .field1{
      border:none;
      padding:10px;
      width:100%;
      border-radius:5px;
      text-align:center;
      transition:all 0.2s ease;
    }
    
    .field1:focus{
      text-align:left;
      outline:none;
      border-left:5px solid #405f86;
    }
    
    .field{
      margin-top:30px;
    }
</style>
<div class="container" style="margin-bottom:50px;">
<center>
<h1 style="background-color: #33485f;border-radius:10px;padding: 20px;padding-right:20px;padding-left:20px;color: #ccc;margin-top: -20px;border-top-left-radius: 0;border-top-right-radius: 0;letter-spacing: 1px; border-bottom:2px solid #ccc; border-left: 2px solid #ccc; border-right: 2px solid #ccc;">Edit User</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
  <%= devise_error_messages! %>

<div class="field">
    <h3>Avatar</h3>
    <img src="<%= current_user.image.url(:medium) %>" class="raised rounded" style="margin:10px;width:150px;" />
    <%= f.file_field :image, autofocus: true %>
  </div>
  
  <div class="field">
    <h3>Display Name</h3>
    <%= f.text_field :display_name, autofocus: true, :class => "field1", :style => "background: #405f86;border-radius: 3px;color:#fff;margin: 10px;margin-top:10px;width: 50%;font-size: 1.5em;font-weight: 100;letter-spacing: 1px;" %>
  </div>
  
  <div class="field">
    <h3>Email</h3>
    <%= f.email_field :email, autofocus: true, :class => "field1", :style => "background: #405f86;border-radius: 3px;color:#fff;margin: 10px;margin-top:10px;width: 50%;font-size: 1.5em;font-weight: 100;letter-spacing: 1px;" %>
  </div>

  <div class="field">
    <h3>Change Password&nbsp;</h3><i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", :class => "field1", :style => "background: #405f86;border-radius: 3px;color:#fff;margin: 10px;margin-top:10px;width: 50%;font-size: 1.5em;font-weight: 100;letter-spacing: 1px;" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <h3>Confirm Password</h3>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "field1", :style => "background: #405f86;border-radius: 3px;color:#fff;margin: 10px;margin-top:10px;width: 50%;font-size: 1.5em;font-weight: 100;letter-spacing: 1px;" %>
  </div>
  
  <div style="height:1px;width:100%;background-color:white;margin:20px;"></div>

  <div class="field">
    <h3>Current Password&nbsp;</h3><i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", :class => "field1", :style => "background: #405f86;border-radius: 3px;color:#fff;margin: 10px;margin-top:10px;width: 50%;font-size: 1.5em;font-weight: 100;letter-spacing: 1px;" %>
  </div>

  <div class="actions">
    <%= f.submit "UPDATE", :class=>"btn btn-primary", :style => "padding:10px;padding-left:30px;padding-right:30px;letter-spacing:1px;font-size:1.5em;margin:20px;" %>
  </div>
<% end %>
</center>
</div>

<script>
  document.title = "Edit User â€¢ Parakeet"
</script>
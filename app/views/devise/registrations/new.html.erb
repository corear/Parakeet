<style>
   body {
        background: 
        linear-gradient(
        rgba(105,186,181,0.7),
        rgba(105,186,181,0.7)
        ), url("/bg3.jpg") no-repeat center center fixed;
        
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
    
    h1{
        color:white;
        font-weight: 700;
    }
    
    p{
      color:white;
      margin-bottom:10px;
    }
    
    .field{
      padding:10px;
      border-radius:8px;
      width:300px;
      margin:20px;
    }
    
    .field1{
      border:none;
      padding:10px;
      width:100%;
      border-radius:5px;
      text-align:center;
    }
    
    .field1:focus{
      text-align:left;
      outline:none;
    }
    
    </style>
    
<center style="margin-top:200px;margin-bottom:200px;">
      <h1>Sign up for your free account</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
    <div class="field">
    <p>Displayed Name</p>
    <%= f.text_field :display_name, autocomplete: "off", :class => "field1" %>
  </div>

  <div class="field">
    <p>Email</p>
    <%= f.email_field :email, autofocus: true, autocomplete: "off",placeholder: "For registration purposes only. We will never contact you.", :class => "field1" %>
  </div>
  


  <div class="field">
    <p>Password</p>
    <% if @minimum_password_length %>
    <em><p>(<%= @minimum_password_length %> characters minimum)</p></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "field1" %>
  </div>

  <div class="field">
    <p>Confirm Password</p>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "field1" %>
  </div>

  <div class="actions">
    <%= f.submit "SIGN UP", :class => "btn btn-primary", :style => "width:300px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</center>

<script>
  document.title="Parakeet | Sign Up"
</script>
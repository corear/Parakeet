<center style="margin-top:150px;margin-bottom:120px;">
      <h1 style="font-size:3em">Sign up for a free account</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, :placeholder => "Email", :id => "txt", autofocus: true, autocomplete: "off", :class => "field1", :style => "background: #33485F;border-radius: 3px;color:#fff;margin: 10px;margin-top:60px;font-size: 1.5em;font-weight: 100;letter-spacing: 1px;" %>
  </div>
  
  <div class="field">
    <%= f.password_field :password, :placeholder => "Password (6+ characters)", :id => "psw", autocomplete: "off", :class => "field1", :style => "background: #33485F;border-radius: 3px;color:#fff;margin: 10px;font-size: 1.5em;font-weight: 100;letter-spacing: 1px;" %>
  </div>
  
  <div class="field">
    <%= f.password_field :password_confirmation, :placeholder => "Confirm password", autocomplete: "off", :class => "field1", :style => "background: #33485F;border-radius: 3px;color:#fff;margin: 10px;font-size: 1.5em;font-weight: 100;letter-spacing: 1px;" %>
  </div>
  
  <div class="field">
    <%= f.text_field :display_name, :placeholder => "Displayed Name", autofocus: true, autocomplete: "off", :class => "field1", :style => "background: #33485F;border-radius: 3px;color:#fff;margin: 10px;margin-bottom:30px;font-size: 1.5em;font-weight: 100;letter-spacing: 1px;" %>
  </div>


  <div class="actions">
    <%= f.submit "SIGN UP", :class => "btn btn-primary", :style => "border: none;font-size: 1.5em;border-radius: 3px;padding: 10px;letter-spacing: 1px;width:300px;" %>
  </div>
<% end %>

</center>

